# ─── Supabase Database ────────────────────────────────────────────────
# Get these from: Supabase Dashboard → Settings → Database → Connection string
# Use the "Transaction" pooler (port 6543) for server actions
# Use the "Session" pooler (port 5432) for Prisma migrations/push
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[YOUR_PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[YOUR_PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# ─── Supabase Storage (file uploads only) ───────────────────────────
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# ─── Clerk Auth ─────────────────────────────────────────────────────
# Get these from: https://dashboard.clerk.com → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/login"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/signup"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/setup"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/setup"

# ─── AI Brain (Gemini) ───────────────────────────────────────────────
# Get this from Google AI Studio: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# ─── Twilio (SMS / WhatsApp) ─────────────────────────────────────────
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+61400000000"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"

# ─── Retell AI (Voice Calls — inbound + outbound) ──────────────────
# All voice calls (inbound & outbound) go through Retell AI.
# Get these from: https://www.retellai.com/dashboard
RETELL_API_KEY="your-retell-api-key"
RETELL_AGENT_ID="your-retell-agent-id"
RETELL_RESPONSE_ENGINE_ID="your-response-engine-id"
RETELL_PRIMARY_VOICE_ID="your-minimax-voice-id"
RETELL_FALLBACK_VOICE_ID="your-fallback-voice-id"

# ─── Resend (Email — Outbound + Inbound Webhooks) ──────────────────
# Get these from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxx"
RESEND_FROM_DOMAIN="earlymark.ai"
# Signing secret from Resend Dashboard → Webhooks → Signing Secret
RESEND_WEBHOOK_SECRET="whsec_xxxxxxxxxxxx"

# ─── Google OAuth (Gmail + Calendar sync) ─────────────────────────────
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ─── Google Maps (dashboard map view) ──────────────────────────────────
# Get an API key with Maps JavaScript API enabled: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# ─── Microsoft Azure (Outlook + Calendar sync) ───────────────────────
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"

# ─── Xero Accounting ─────────────────────────────────────────────────
XERO_CLIENT_ID="your-xero-client-id"
XERO_CLIENT_SECRET="your-xero-client-secret"

# ─── MYOB AccountRight ──────────────────────────────────────────────
# Get these from: https://developer.myob.com/
MYOB_CLIENT_ID="your-myob-client-id"
MYOB_CLIENT_SECRET="your-myob-client-secret"
MYOB_COMPANY_FILE_URI="https://ar1.api.myob.com/accountright/[COMPANY_FILE_ID]"
