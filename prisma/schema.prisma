// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum WorkspaceType {
  TRADIE
  AGENT
}

enum AgentMode {
  EXECUTE
  ORGANIZE
  FILTER
}

enum IndustryType {
  TRADES
  REAL_ESTATE
}

enum DealStage {
  NEW
  CONTACTED
  NEGOTIATION
  SCHEDULED
  PIPELINE
  INVOICED
  WON
  LOST
  DELETED
  ARCHIVED
}

enum ActivityType {
  CALL
  EMAIL
  MEETING
  NOTE
  TASK
}

enum JobStatus {
  SCHEDULED
  TRAVELING
  ON_SITE
  COMPLETED
  CANCELLED
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

model Workspace {
  id                 String        @id @default(cuid())
  name               String
  type               WorkspaceType
  industryType       IndustryType?
  ownerId            String?
  location           String?
  onboardingComplete Boolean       @default(false)
  tutorialComplete   Boolean       @default(false)
  brandingColor      String?
  settings           Json? @default("{}")
  
  // Twilio SaaS Subaccount details for dynamic AI agent phone numbers
  twilioSubaccountId    String?
  twilioPhoneNumber     String?
  twilioPhoneNumberSid  String?
  twilioSipTrunkSid     String?
  twilioSubaccountAuthToken String?

  // Retell AI Voice Agent
  retellAgentId         String?
  
  // Stripe Billing & Subscriptions
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  subscriptionStatus     String?   @default("inactive")

  // Agent & Automation Settings
  agentMode          AgentMode @default(ORGANIZE)
  workingHoursStart  String?   @default("08:00")
  workingHoursEnd    String?   @default("17:00")
  agendaNotifyTime   String?   @default("07:30")
  wrapupNotifyTime   String?   @default("17:30")
  
  // Job Reminder Settings
  jobReminderHours   Int?      @default(24)
  enableJobReminders Boolean   @default(true)
  enableTripSms      Boolean   @default(true)
  
  users              User[]
  deals              Deal[]
  contacts           Contact[]
  messageTemplates   MessageTemplate[]
  automations        Automation[]
  chatMessages       ChatMessage[]
  materials          Material[]
  keys               Key[]
  repairItems        RepairItem[]
  
  // Self-Learning & NLP Behavioral State
  aiPreferences      String?     @db.Text
  autoUpdateGlossary Boolean     @default(true)

  // Integrations & Billing Directives
  callOutFee         Decimal?    @default(0)
  inboundEmail       String?     @unique
  /** Alias for lead-capture address: [alias]@inbound.earlymark.ai (or INBOUND_LEAD_DOMAIN). */
  inboundEmailAlias  String?     @unique
  /** When true, inbound "Lead Won" emails (HiPages, Airtasker, etc.) trigger an immediate Retell call to the lead. */
  autoCallLeads      Boolean     @default(false)

  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String?
  phone       String?   // Personal phone number for app communication
  bio         String?
  urls        Json?     // Stores array of { value: string }
  hasOnboarded Boolean  @default(false)
  role        UserRole  @default(OWNER)

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  activities  Activity[]
  notifications Notification[]
  emailIntegrations EmailIntegration[]

  // View preference
  viewMode    String?   @default("BASIC") // BASIC, ADVANCED

  // Onboarding & Templates
  businessProfile  BusinessProfile?
  pricingSettings  PricingSettings?
  smsTemplates     SmsTemplate[]

  assignedDeals    Deal[]   @relation("AssignedDeals")
  jobNotes         JobNote[] @relation("JobNotes")
  
  // Referral System
  referrals        Referral[]
}

// ─── Email Integration Model ─────────────────────────────────────────────

model EmailIntegration {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  provider     String   // "gmail" or "outlook"
  emailAddress String   // User's email address
  
  // OAuth tokens (encrypted at rest)
  accessToken  String   // Encrypted access token
  refreshToken String?  // Encrypted refresh token
  tokenExpiry DateTime? // When access token expires
  
  // Integration status
  isActive     Boolean  @default(true)
  lastSyncAt   DateTime?
  webhookId    String?  // Gmail watch ID or Graph subscription ID
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, provider])
}

model Deal {
  id             String    @id @default(cuid())
  title          String
  stage          DealStage @default(NEW)
  value          Decimal?
  invoicedAmount Float?
  isDraft        Boolean   @default(false)
  
  // Polymorphic Metadata: Stores "Job Details" (Tradie) or "Listing Details" (Agent)
  metadata       Json?     
  
  // Geo-scheduling
  address        String?
  latitude       Float?
  longitude      Float?
  
  // Job / Event Scheduling
  scheduledAt    DateTime?
  jobStatus      JobStatus? // For Tradie workflow
  safetyCheckCompleted Boolean   @default(false)
  
  // Stale Job Recovery System
  isStale        Boolean   @default(false)
  actualOutcome  String?   // "COMPLETED", "NO_SHOW", "RESCHEDULED"
  outcomeNotes   String?   @db.Text
  
  lastActivityAt DateTime  @default(now())
  stageChangedAt DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  workspaceId    String
  workspace      Workspace @relation(fields: [workspaceId], references: [id])

  contactId      String
  contact        Contact   @relation(fields: [contactId], references: [id])

  // Team member assignment
  assignedToId   String?
  assignedTo     User?     @relation("AssignedDeals", fields: [assignedToId], references: [id])
  
  activities     Activity[]
  tasks          Task[]
  invoices       Invoice[]
  openHouseLogs  OpenHouseLog[]
  buyerFeedback  BuyerFeedback[]
  jobPhotos      JobPhoto[]
  jobNotes       JobNote[]
  customerFeedback CustomerFeedback[]
}

model Contact {
  id          String    @id @default(cuid())
  name        String
  email       String?
  phone       String?
  company     String?
  avatarUrl   String?
  address     String?
  
  // Preferences for Matchmaker (e.g., { "budget": 1200000, "bedrooms": 3 })
  preferences Json?
  metadata    Json?
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  deals       Deal[]
  activities  Activity[]
  tasks       Task[]
  keysHeld    Key[]
  feedback    BuyerFeedback[]
  customerFeedback CustomerFeedback[] @relation("CustomerFeedback")
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  title       String
  description String?
  content     String?
  
  userId      String?
  user        User?        @relation(fields: [userId], references: [id])
  
  dealId      String?
  deal        Deal?        @relation(fields: [dealId], references: [id])
  
  contactId   String?
  contact     Contact?     @relation(fields: [contactId], references: [id])
  
  createdAt   DateTime     @default(now())
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  completedAt DateTime?
  dueAt       DateTime?
  
  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id])
  
  contactId   String?
  contact     Contact? @relation(fields: [contactId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invoice {
  id          String    @id @default(cuid())
  number      String    @unique
  status      String    // DRAFT, ISSUED, PAID, VOID
  subtotal    Decimal
  tax         Decimal
  total       Decimal
  lineItems   Json
  
  issuedAt    DateTime?
  paidAt      DateTime?
  
  dealId      String
  deal        Deal      @relation(fields: [dealId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MessageTemplate {
  id          String    @id @default(cuid())
  name        String
  category    String    // follow-up, quote, meeting, etc
  subject     String?
  body        String
  variables   String?   // JSON array of variable names
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Automation {
  id          String    @id @default(cuid())
  name        String
  enabled     Boolean   @default(true)
  trigger     Json      // { event: "deal_stale", threshold: 7 }
  action      Json      // { type: "notify", message: "..." }
  lastFiredAt DateTime?
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ChatMessage {
  id          String    @id @default(cuid())
  role        String    // user, assistant
  content     String
  metadata    Json?
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime  @default(now())
}

model OpenHouseLog {
  id              String   @id @default(cuid())
  attendeeName    String
  attendeeEmail   String?
  attendeePhone   String?
  interestedLevel Int      @default(0) // 0-5
  notes           String?
  
  dealId          String
  deal            Deal     @relation(fields: [dealId], references: [id])
  
  visitedAt       DateTime @default(now())
}

model Material {
  id          String    @id @default(cuid())
  name        String
  description String?
  unit        String    // e.g. "m", "hr", "each"
  price       Decimal
  category    String?   // "Plumbing", "Electrical"
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model BuyerFeedback {
  id            String   @id @default(cuid())
  interestLevel String   // HOT, WARM, COLD
  priceOpinion  Decimal?
  notes         String?
  
  dealId        String
  deal          Deal     @relation(fields: [dealId], references: [id])
  
  contactId     String
  contact       Contact  @relation(fields: [contactId], references: [id])
  
  createdAt     DateTime @default(now())
}

model Key {
  id          String   @id @default(cuid())
  code        String   // e.g. "K-101"
  description String?  // "Front door key"
  status      String   // AVAILABLE, CHECKED_OUT, LOST
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  // If checked out
  holderId    String?
  holder      Contact? @relation(fields: [holderId], references: [id])
  
  checkedOutAt DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String           @id @default(cuid())
  title     String
  message   String
  type      NotificationType @default(INFO)
  read      Boolean          @default(false)
  link      String?
  
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  
  createdAt DateTime         @default(now())
}

model JobPhoto {
  id        String   @id @default(cuid())
  url       String
  caption   String?
  
  dealId    String
  deal      Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}

model JobNote {
  id        String   @id @default(cuid())
  content   String   @db.Text
  authorId  String
  
  dealId    String
  deal      Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  
  author    User     @relation("JobNotes", fields: [authorId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CustomerFeedback {
  id          String   @id @default(cuid())
  score       Int      // 1-10 rating
  comment     String?
  resolved    Boolean  @default(false)
  resolution  String?  // Internal resolution notes

  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id], onDelete: SetNull)

  contactId   String
  contact     Contact  @relation("CustomerFeedback", fields: [contactId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RepairItem {
  id          String   @id @default(cuid())
  title       String
  description String?

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
}

// ─── Onboarding Wizard ──────────────────────────────────────────────

enum PricingMode {
  BOOK_ONLY
  CALL_OUT
  STANDARD
}

model BusinessProfile {
  id                 String   @id @default(cuid())
  tradeType          String   // Plumber, Sparky, HVAC, etc.
  website            String?
  baseSuburb         String
  serviceRadius      Int      @default(20)
  standardWorkHours  String   @default("Mon-Fri, 07:00-15:30")
  emergencyService   Boolean  @default(false)
  emergencySurcharge Float?

  userId             String   @unique
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model PricingSettings {
  id          String      @id @default(cuid())
  mode        PricingMode @default(STANDARD)
  callOutFee  Float?      @default(89.0)
  waiveFee    Boolean     @default(true)
  menuItems   Json?       // Array of { name: string, price: number }

  userId      String      @unique
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// ─── One-Tap SMS / Email Templates ──────────────────────────────────

enum TriggerEvent {
  JOB_COMPLETE
  ON_MY_WAY
  LATE
  BOOKING_REMINDER_24H
}

// ─── Team Roles & Invites ───────────────────────────────────────────

enum UserRole {
  OWNER
  MANAGER
  TEAM_MEMBER
}

model WorkspaceInvite {
  id          String    @id @default(cuid())
  token       String    @unique @default(cuid())
  email       String?
  role        UserRole  @default(TEAM_MEMBER)

  workspaceId String
  invitedById String

  acceptedAt  DateTime?
  expiresAt   DateTime

  createdAt   DateTime  @default(now())

  @@index([token])
  @@index([workspaceId])
}

// ─── Automated Communication Rules ─────────────────────────────────

model AutomatedMessageRule {
  id              String    @id @default(cuid())
  name            String
  enabled         Boolean   @default(true)
  triggerType     String    // "booking_reminder_24h", "booking_confirmation", "follow_up_after_job", "no_show_alert"
  channel         String    @default("sms") // "sms", "email", "both"
  messageTemplate String    @db.Text

  hoursOffset     Int       @default(-24) // negative = before event, positive = after event

  workspaceId     String

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([workspaceId])
}

model SmsTemplate {
  id           String       @id @default(cuid())
  triggerEvent TriggerEvent
  content      String
  isActive     Boolean      @default(true)

  userId       String
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([userId, triggerEvent])
}

// ─── Webhook Audit Log ──────────────────────────────────────────────
// Tracks the last successful webhook event per provider for diagnostics.

model WebhookEvent {
  id        String   @id @default(cuid())
  provider  String   // "stripe" | "resend" | "twilio" | "retell"
  eventType String   // e.g. "checkout.session.completed", "email.delivered"
  status    String   @default("success") // "success" | "error"
  payload   Json?    // Sanitised event summary (no secrets)
  error     String?  // Error message if status is "error"

  createdAt DateTime @default(now())

  @@index([provider, createdAt])
}

model ReferralProgram {
  id          String   @id @default(cuid())
  name        String   // "Earlymark Pro Referral"
  description String?
  rewardType   String   // "cash" | "credit" | "discount"
  rewardValue  Float    // e.g. 29.00 for $29 credit
  rewardCurrency String @default("USD")
  isActive    Boolean  @default(true)
  
  referredRewardType   String   // What the referred user gets
  referredRewardValue  Float    // e.g. 10.00 for $10 discount
  referredRewardCurrency String @default("USD")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  referrals Referral[]
}

model Referral {
  id          String   @id @default(cuid())
  userId      String
  programId   String
  referralCode String  @unique // Unique code for the referrer
  referredById  String? // User ID of person who referred (if applicable)
  status      String   @default("pending") // "pending" | "completed" | "rewarded"
  
  // Tracking
  clicksCount Int      @default(0)
  signupsCount Int     @default(0)
  conversionsCount Int @default(0)
  
  // Rewards
  referrerRewardEarned Float @default(0)
  referredRewardEarned Float @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  program   ReferralProgram @relation(fields: [programId], references: [id])
  clicks    ReferralClick[]
  
  @@unique([userId, programId])
  @@index([referralCode])
  @@index([status])
}

model ReferralClick {
  id          String   @id @default(cuid())
  referralId  String
  ipAddress   String?
  userAgent   String?
  referrer    String?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  
  createdAt DateTime @default(now())
  
  referral Referral @relation(fields: [referralId], references: [id], onDelete: Cascade)
  
  @@index([referralId])
  @@index([createdAt])
}

model VerificationCode {
  id String @id @default(cuid())
  
  userId String
  phoneNumber String
  
  code String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@unique([userId, phoneNumber])
  @@map("verification_codes")
}

