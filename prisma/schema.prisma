// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WorkspaceType {
  TRADIE
  AGENT
}

enum IndustryType {
  TRADES
  REAL_ESTATE
}

enum DealStage {
  NEW
  CONTACTED
  NEGOTIATION
  WON
  LOST
  INVOICED
  ARCHIVED
}

enum ActivityType {
  CALL
  EMAIL
  MEETING
  NOTE
  TASK
}

enum JobStatus {
  SCHEDULED
  TRAVELING
  ON_SITE
  COMPLETED
  CANCELLED
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

model Workspace {
  id                 String        @id @default(cuid())
  name               String
  type               WorkspaceType
  industryType       IndustryType?
  ownerId            String?
  location           String?
  onboardingComplete Boolean       @default(false)
  brandingColor      String?
  settings           Json?
  
  users              User[]
  deals              Deal[]
  contacts           Contact[]
  messageTemplates   MessageTemplate[]
  automations        Automation[]
  chatMessages       ChatMessage[]
  materials          Material[]
  keys               Key[]
  
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String?
  bio         String?
  urls        Json?     // Stores array of { value: string }
  hasOnboarded Boolean  @default(false)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  activities  Activity[]
  notifications Notification[]
  
  // View preference
  viewMode    String?   @default("BASIC") // BASIC, ADVANCED
}

model Deal {
  id             String    @id @default(cuid())
  title          String
  stage          DealStage @default(NEW)
  value          Decimal?
  
  // Polymorphic Metadata: Stores "Job Details" (Tradie) or "Listing Details" (Agent)
  metadata       Json?     
  
  // Geo-scheduling
  address        String?
  latitude       Float?
  longitude      Float?
  
  // Job / Event Scheduling
  scheduledAt    DateTime?
  jobStatus      JobStatus? // For Tradie workflow
  safetyCheckCompleted Boolean   @default(false)
  
  lastActivityAt DateTime  @default(now())
  stageChangedAt DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  workspaceId    String
  workspace      Workspace @relation(fields: [workspaceId], references: [id])
  
  contactId      String
  contact        Contact   @relation(fields: [contactId], references: [id])
  
  activities     Activity[]
  tasks          Task[]
  invoices       Invoice[]
  openHouseLogs  OpenHouseLog[]
  buyerFeedback  BuyerFeedback[]
  jobPhotos      JobPhoto[]
}

model Contact {
  id          String    @id @default(cuid())
  name        String
  email       String?
  phone       String?
  company     String?
  avatarUrl   String?
  address     String?
  
  // Preferences for Matchmaker (e.g., { "budget": 1200000, "bedrooms": 3 })
  preferences Json?
  metadata    Json?
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  deals       Deal[]
  activities  Activity[]
  tasks       Task[]
  keysHeld    Key[]
  feedback    BuyerFeedback[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  title       String
  description String?
  content     String?
  
  userId      String?
  user        User?        @relation(fields: [userId], references: [id])
  
  dealId      String?
  deal        Deal?        @relation(fields: [dealId], references: [id])
  
  contactId   String?
  contact     Contact?     @relation(fields: [contactId], references: [id])
  
  createdAt   DateTime     @default(now())
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  completedAt DateTime?
  dueAt       DateTime?
  
  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id])
  
  contactId   String?
  contact     Contact? @relation(fields: [contactId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invoice {
  id          String    @id @default(cuid())
  number      String    @unique
  status      String    // DRAFT, ISSUED, PAID, VOID
  subtotal    Decimal
  tax         Decimal
  total       Decimal
  lineItems   Json
  
  issuedAt    DateTime?
  paidAt      DateTime?
  
  dealId      String
  deal        Deal      @relation(fields: [dealId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MessageTemplate {
  id          String    @id @default(cuid())
  name        String
  category    String    // follow-up, quote, meeting, etc
  subject     String?
  body        String
  variables   String?   // JSON array of variable names
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Automation {
  id          String    @id @default(cuid())
  name        String
  enabled     Boolean   @default(true)
  trigger     Json      // { event: "deal_stale", threshold: 7 }
  action      Json      // { type: "notify", message: "..." }
  lastFiredAt DateTime?
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ChatMessage {
  id          String    @id @default(cuid())
  role        String    // user, assistant
  content     String
  metadata    Json?
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime  @default(now())
}

model OpenHouseLog {
  id              String   @id @default(cuid())
  attendeeName    String
  attendeeEmail   String?
  attendeePhone   String?
  interestedLevel Int      @default(0) // 0-5
  notes           String?
  
  dealId          String
  deal            Deal     @relation(fields: [dealId], references: [id])
  
  visitedAt       DateTime @default(now())
}

model Material {
  id          String    @id @default(cuid())
  name        String
  description String?
  unit        String    // e.g. "m", "hr", "each"
  price       Decimal
  category    String?   // "Plumbing", "Electrical"
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model BuyerFeedback {
  id            String   @id @default(cuid())
  interestLevel String   // HOT, WARM, COLD
  priceOpinion  Decimal?
  notes         String?
  
  dealId        String
  deal          Deal     @relation(fields: [dealId], references: [id])
  
  contactId     String
  contact       Contact  @relation(fields: [contactId], references: [id])
  
  createdAt     DateTime @default(now())
}

model Key {
  id          String   @id @default(cuid())
  code        String   // e.g. "K-101"
  description String?  // "Front door key"
  status      String   // AVAILABLE, CHECKED_OUT, LOST
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  
  // If checked out
  holderId    String?
  holder      Contact? @relation(fields: [holderId], references: [id])
  
  checkedOutAt DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String           @id @default(cuid())
  title     String
  message   String
  type      NotificationType @default(INFO)
  read      Boolean          @default(false)
  link      String?
  
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  
  createdAt DateTime         @default(now())
}

model JobPhoto {
  id        String   @id @default(cuid())
  url       String
  caption   String?
  
  dealId    String
  deal      Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}
